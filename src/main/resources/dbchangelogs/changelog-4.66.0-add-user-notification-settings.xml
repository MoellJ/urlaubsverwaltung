<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

  <changeSet author="seber" id="add-user-notification-settings">

    <preConditions>
      <not>
        <tableExists tableName="user_notification_settings"/>
      </not>
    </preConditions>

    <createTable tableName="user_notification_settings">
      <column name="person_id" type="INT(10)">
        <constraints primaryKey="true" unique="true" uniqueConstraintName="unique_notification_per_person"/>
      </column>
      <column name="restrict_to_departments" type="BIT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint
      baseTableName="user_notification_settings"
      baseColumnNames="person_id"
      constraintName="FK_NOTIFICATION_PERSON"
      onDelete="CASCADE"
      referencedTableName="person"
      referencedColumnNames="id"
    />
  </changeSet>
</databaseChangeLog>
